<Window x:Class="EntityFrameWork_HomeWork.Views.CategoryAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntityFrameWork_HomeWork.Views"
        mc:Ignorable="d"
        Title="CategoryAddWindow" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.RowSpan="2" Margin="5" TextAlignment="Left" VerticalAlignment="Center">Category Name</TextBlock>
        <TextBox Name="txt" Grid.RowSpan="2"  Width="120" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
        <Button Click="Button_Click" Grid.ColumnSpan="2" Grid.Row="1" Margin="30" >ADD/EDIT</Button>
    </Grid>
</Window>
